<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Article">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="225dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview1"
            style="@style/TvShowElement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/economica_bold"
            android:text="@string/Code"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview3"
            style="@style/TvShowElement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/economica_bold"
            android:text="Descripcion:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textview2"
            style="@style/TvShowElement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/economica_bold"
            android:text="@string/Stock"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textview"
            style="@style/TvShowElement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/economica_bold"
            android:text="Precio:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textview4"
            style="@style/TvShowElement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/economica_bold"
            android:text="Precio con IVA:"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/Mas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3"
            app:srcCompat="@drawable/ic_add_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="171dp"
        android:layout_height="225dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idArticle"
            style="@style/TvShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_medium"
            android:text="TextView"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/descriptionArticle"
            style="@style/TvShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_medium"
            android:text="TextView"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/stockArticle"
            style="@style/TvShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_medium"
            android:text="TextView"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/priceArticle"
            style="@style/TvShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_medium"
            android:text="TextView"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/priceWithIVA"
            style="@style/TvShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_medium"
            android:text="TextView"
            android:textSize="19dp" />

        <ImageView
            android:id="@+id/Storie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_history_black_24dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="225dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            style="@style/TvShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="19dp" />

        <ImageView
            android:id="@+id/deleteMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_delete_black_24dp" />

        <TextView
            android:id="@+id/textView6"
            style="@style/TvShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="19dp" />

        <ImageView
            android:id="@+id/Menos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/ic_remove_black_24dp" />

    </LinearLayout>

</LinearLayout>